# define the cpu used by TK-MPRS06-LCD-A
export CPU = efm32
export CPU_MODEL = efr32mg1p233f256gm48

# flags for the Energy Profiler
#CFLAGS_DBG ?= -gdwarf-2 -g3

# set default port depending on operation system
PORT_LINUX ?= /dev/ttyACM0
PORT_DARWIN ?= $(firstword $(sort $(wildcard /dev/tty.usbmodem*)))

# setup JLink for flashing
export JLINK_DEVICE := EFR32MG1PxxxF256

include $(RIOTMAKE)/tools/gdb.inc.mk
export DBG := $(GDB)

include $(RIOTMAKE)/tools/jlink.inc.mk

# setup serial terminal
include $(RIOTMAKE)/tools/serial.inc.mk
